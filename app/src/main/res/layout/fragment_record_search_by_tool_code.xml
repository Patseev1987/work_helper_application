<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".presenter.fragments.RecordSearchByToolCodeFragment">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/in_layout_records_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:hint="@string/enter_worker_surname"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/in_edit_text_recycle_view_workers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/records_search_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@+id/in_layout_records_search"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="16dp"/>


        <ProgressBar
            android:id="@+id/progress_bar_records_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/records_search_recycle_view"
            app:layout_constraintBottom_toBottomOf="@+id/records_search_recycle_view"
            app:layout_constraintTop_toTopOf="@+id/records_search_recycle_view"
            app:layout_constraintEnd_toEndOf="@+id/records_search_recycle_view"/>



    </androidx.constraintlayout.widget.ConstraintLayout>